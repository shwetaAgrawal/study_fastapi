{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python"
    },
    {
      "name": "Pytest: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-q"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python"
    },
    {
      "name": "FastAPI: Uvicorn (hello_fastapi:app)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "${command:python.interpreterPath}",
        "-c",
        "import os,sys; sys.path.insert(0, '${workspaceFolder}/src'); print(os.path.relpath('${file}', '${workspaceFolder}/src').replace('.py','').replace('/', '.').replace('\\\\', '.'))",
        ":app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
